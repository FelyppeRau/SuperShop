@model SuperShop.Models.ProductViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Product</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data"> @*enctype="multipart/form-data" informado depois do ProductViewModel*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageId" /> @*devemos indicar a imagem assim como fazmos com o id (hidden), pois podemos não alterar a imagem*@
            

            @*ALTERADO APÓS A CRIAÇÃO DA VIEW PARCIAL*@
            <partial name="_Products" />


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class=" btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImageFullPath)) // JÁ ESTÁ A FAZER A VALIDAÇÃO NA CLASSE. NÃO PRECISA MANTER AQUI
        {
            <img src="@Url.Content(Model.ImageFullPath)" alt="Image" style="width:200px; height:350px; max-width:100%; height:auto">
        }
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
